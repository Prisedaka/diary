block content
  .row.mt-3
    .col-sm-6.mx-auto
      if posts.length > 0
        for post in posts
          div.card.card1
            .card-body
              h5.card-title= post.title
              p.card-text= post.body
              a.btn.btn-outline-primary.btn-sm(role='button' href=`/posts/${post.id}/edit`) Edit
              //- a(href=`/posts/${post.id}/edit`) Edit
              form.form-inline.d-inline-block(action=`/posts/${post.id}?_method=DELETE` method='post')
              button.btn.btn-outline-danger.btn-sm(type='submit') Delete
      else
        p You are no notes

